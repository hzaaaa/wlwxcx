.setpassword-popup {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.setpassword-popup .socket {
  width: 666rpx;
  height: 368rpx;
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 5px;
}
.setpassword-popup .socket .title {
  margin-top: 24rpx;
  margin-left: 24rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
}
.setpassword-popup .socket .close {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 20rpx;
  top: 20rpx;
}
.setpassword-popup .socket .body {
  margin-top: 36rpx;
}
.setpassword-popup .socket .body .body-item {
  display: flex;
  margin-bottom: 24rpx;
  margin-left: 24rpx;
  height: 48rpx;
}
.setpassword-popup .socket .body .body-item .key {
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: right;
  color: #333333;
  line-height: 60rpx;
}
.setpassword-popup .socket .body .body-item .input {
  margin-left: 12rpx;
  padding-left: 10rpx;
  width: 426rpx;
  height: 60rpx;
  background: #ffffff1f;
  border: 1px solid #33333327;
  border-radius: 3px;
}
.setpassword-popup .socket .body .body-item .placeholder {
  margin-left: 24rpx;
  opacity: 0.3;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.setpassword-popup .socket .footer {
  position: absolute;
  bottom: 0;
  margin-bottom: 36rpx;
  display: flex;
}
.setpassword-popup .socket .footer .cancel {
  margin-left: 206rpx;
  width: 136rpx;
  height: 60rpx;
  border: 1px solid #0068ff;
  border-radius: 5px;
  box-sizing: border-box;
  line-height: 60rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0068ff;
}
.setpassword-popup .socket .footer .confirm {
  margin-left: 12rpx;
  width: 136rpx;
  height: 60rpx;
  background: #0068ff;
  border-radius: 5px;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  line-height: 60rpx;
}
