.kongtiao-popup {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.kongtiao-popup .kongtiao {
  width: 666rpx;
  height: 1000rpx;
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  border-radius: 5px;
}
.kongtiao-popup .kongtiao .title {
  margin-top: 24rpx;
  margin-left: 24rpx;
  font-size: 16px;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
}
.kongtiao-popup .kongtiao .close {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 20rpx;
  top: 20rpx;
}
.kongtiao-popup .kongtiao .body {
  margin-top: 36rpx;
  margin-left: 24rpx;
}
.kongtiao-popup .kongtiao .body .body-item {
  display: flex;
  margin-bottom: 24rpx;
}
.kongtiao-popup .kongtiao .body .body-item .name {
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
}
.kongtiao-popup .kongtiao .body .body-item .value {
  margin-left: 14rpx;
  opacity: 0.7;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.kongtiao-popup .kongtiao .body .body-item .switchC {
  position: relative;
  top: -10rpx;
  left: -14rpx;
  transform: scale(0.5);
}
.kongtiao-popup .kongtiao .body .body-item .radioGC {
  display: flex;
}
.kongtiao-popup .kongtiao .body .body-item .radioGC .item {
  display: flex;
}
.kongtiao-popup .kongtiao .body .body-item .radioGC .item .radioC {
  transform: scale(0.5);
  position: relative;
  top: -5rpx;
}
.kongtiao-popup .kongtiao .body .body-item .radioGC .item .text {
  opacity: 0.7;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  margin-left: -10rpx;
}
.kongtiao-popup .kongtiao .body .body-item .item-value {
  margin-left: 12rpx;
  opacity: 0.7;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.kongtiao-popup .kongtiao .body .body-item .item-block-wrap {
  position: relative;
  top: -10rpx;
  display: flex;
  margin-bottom: 20rpx;
  margin-left: 12rpx;
}
.kongtiao-popup .kongtiao .body .body-item .item-block-wrap .item-block {
  box-sizing: border-box;
  margin-right: 12rpx;
  width: 54px;
  height: 30px;
  background: #ffffff;
  border: 1px solid #33333310;
  border-radius: 3px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  line-height: 30px;
  color: #333333a4;
}
.kongtiao-popup .kongtiao .body .body-item .item-block-wrap .item-block-active {
  box-sizing: border-box;
  margin-right: 12rpx;
  width: 54px;
  height: 30px;
  background: #0068ff;
  border: 1px solid #33333310;
  border-radius: 3px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  line-height: 30px;
  color: #ffffff;
}
.kongtiao-popup .kongtiao .body .temperatureC {
  display: flex;
}
.kongtiao-popup .kongtiao .body .temperatureC slider {
  margin-top: 0;
  width: 400rpx;
  margin-right: 20rpx;
}
.kongtiao-popup .kongtiao .body .temperatureC .buttonC {
  width: 50rpx;
  height: 63rpx;
  background-color: #fff;
  position: relative;
  top: -9rpx;
}
.kongtiao-popup .kongtiao .body .temperatureC .buttonC .add {
  width: 100%;
  height: 30rpx;
  opacity: 0.7;
  background: #ffffff;
  border: 1px solid #333333;
  border-radius: 3px;
  box-sizing: border-box;
}
.kongtiao-popup .kongtiao .body .temperatureC .buttonC .add .img {
  width: 46rpx;
  height: 30rpx;
  position: relative;
  top: -6rpx;
}
.kongtiao-popup .kongtiao .footer {
  position: absolute;
  bottom: 0;
  margin-bottom: 36rpx;
  display: flex;
}
.kongtiao-popup .kongtiao .footer .cancel {
  margin-left: 206rpx;
  width: 136rpx;
  height: 60rpx;
  border: 1px solid #0068ff;
  border-radius: 5px;
  box-sizing: border-box;
  line-height: 60rpx;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0068ff;
}
.kongtiao-popup .kongtiao .footer .confirm {
  margin-left: 12rpx;
  width: 136rpx;
  height: 60rpx;
  background: #0068ff;
  border-radius: 5px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  line-height: 60rpx;
}
