page {
  height: 100%;
}
page .debugging {
  height: 100%;
  background: #f8f8f8;
  overflow: hidden;
}
page .debugging .block {
  margin: 24rpx;
  height: calc(100% - 48rpx);
  background-color: #fff;
  overflow: hidden;
}
page .debugging .block .head {
  margin-top: 36rpx;
  display: flex;
}
page .debugging .block .head .name {
  width: 140rpx;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: right;
  color: #333333;
  line-height: 60rpx;
}
page .debugging .block .head .input {
  margin-left: 12rpx;
  width: 460rpx;
  height: 60rpx;
  background: #ffffff;
  border: 1px solid #3333331a;
  border-radius: 3px;
}
page .debugging .block .head .scan {
  margin-left: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
page .debugging .block .footer {
  margin-top: 100rpx;
  display: flex;
}
page .debugging .block .footer .cancel {
  width: 210rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #0068ff;
  border-radius: 5px;
  box-sizing: border-box;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0068ff;
  margin-left: 24rpx;
}
page .debugging .block .footer .confirm {
  width: 210rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #0068ff;
  border-radius: 5px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  margin-left: 130rpx;
}
