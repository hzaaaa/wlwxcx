page {
  height: 100%;
}
page .kongkai {
  height: 100%;
  background: #f8f8f8;
  overflow: hidden;
}
page .kongkai .block {
  margin: 24rpx;
  height: calc(100% - 48rpx);
  background-color: #fff;
  overflow: hidden;
  box-sizing: border-box;
}
page .kongkai .block .head {
  margin-top: 24rpx;
  display: flex;
}
page .kongkai .block .head .name {
  width: 140rpx;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: right;
  color: #333333;
  line-height: 60rpx;
}
page .kongkai .block .head .value {
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333bd;
  line-height: 60rpx;
  margin-left: 12rpx;
}
page .kongkai .block .head .open {
  margin-left: 12rpx;
  width: 54px;
  height: 60rpx;
  background: #0068ff;
  border-radius: 3px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  line-height: 60rpx;
}
page .kongkai .block .head .close {
  width: 54px;
  height: 60rpx;
  background: #ffffff;
  border: 1px solid #3333331c;
  border-radius: 3px;
  box-sizing: border-box;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #333333a8;
  line-height: 60rpx;
  margin-left: 24rpx;
}
page .kongkai .block .head .green {
  margin-left: 12rpx;
  width: 54px;
  height: 60rpx;
  background: #70b603;
  border-radius: 3px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  line-height: 60rpx;
}
page .kongkai .block .footer {
  margin-top: 132rpx;
  display: flex;
}
page .kongkai .block .footer .over {
  margin-left: 130rpx;
  width: 105px;
  height: 70rpx;
  line-height: 70rpx;
  background: #0068ff;
  border-radius: 5px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
}
page .kongkai .block .footer .cancel {
  margin-left: 24rpx;
  width: 105px;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #0068ff;
  border-radius: 5px;
  box-sizing: border-box;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0068ff;
}
