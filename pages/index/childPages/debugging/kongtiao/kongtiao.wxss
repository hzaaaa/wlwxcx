page {
  height: 100%;
}
page .kongtiao {
  height: 100%;
  background: #f8f8f8;
  overflow: hidden;
}
page .kongtiao .block {
  margin: 24rpx;
  height: calc(100% - 48rpx);
  background-color: #fff;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
}
page .kongtiao .block .head {
  margin-top: 24rpx;
  display: flex;
}
page .kongtiao .block .head .name {
  width: 140rpx;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: right;
  color: #333333;
  line-height: 60rpx;
}
page .kongtiao .block .head .value {
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333bd;
  line-height: 60rpx;
  margin-left: 12rpx;
}
page .kongtiao .block .head .selectList {
  margin-left: 12rpx;
}
page .kongtiao .block .head .selectList .select {
  width: 200px;
  height: 60rpx;
  line-height: 60rpx;
  background: #0068ff;
  border-radius: 3px;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  margin-bottom: 24rpx;
}
page .kongtiao .block .head .selectList .green {
  width: 200px;
  height: 60rpx;
  line-height: 60rpx;
  background: #70b603;
  border-radius: 3px;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  margin-bottom: 24rpx;
}
page .kongtiao .block .head .selectList .unselect {
  width: 200px;
  height: 60rpxpx;
  line-height: 60rpx;
  border: 1px solid #3333331e;
  border-radius: 3px;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #3333339c;
  margin-bottom: 24rpx;
}
page .kongtiao .block .footer {
  position: absolute;
  bottom: 112rpx;
  display: flex;
}
page .kongtiao .block .footer .over {
  margin-left: 130rpx;
  width: 105px;
  height: 70rpx;
  line-height: 70rpx;
  background: #0068ff;
  border-radius: 5px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
}
page .kongtiao .block .footer .cancel {
  margin-left: 24rpx;
  width: 105px;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #0068ff;
  border-radius: 5px;
  box-sizing: border-box;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0068ff;
}
page .kongtiao .modeConfirm {
  position: absolute;
  z-index: 1000;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  background: #00000075;
  display: flex;
  justify-content: center;
  align-items: center;
}
page .kongtiao .modeConfirm .popup {
  width: 331px;
  height: 190px;
  background: #ffffff;
  border-radius: 5px;
  position: relative;
}
page .kongtiao .modeConfirm .popup .title {
  margin: 24rpx;
  font-size: 16px;
  font-family: PingFang SC, PingFang SC-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
}
page .kongtiao .modeConfirm .popup .red-word {
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #fc2727;
  margin-top: 36rpx;
}
page .kongtiao .modeConfirm .popup .stateList {
  margin-top: 24rpx;
}
page .kongtiao .modeConfirm .popup .stateList .item {
  margin-bottom: 24rpx;
  display: flex;
}
page .kongtiao .modeConfirm .popup .stateList .item .name {
  flex: 1;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: right;
  color: #333333;
}
page .kongtiao .modeConfirm .popup .stateList .item .value {
  flex: 1;
  font-size: 12px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333b7;
}
page .kongtiao .modeConfirm .popup .footer {
  margin-top: 36rpx;
  display: flex;
}
page .kongtiao .modeConfirm .popup .footer .cancel {
  width: 68px;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px solid #0068ff;
  border-radius: 5px;
  box-sizing: border-box;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0068ff;
  margin-left: 190rpx;
}
page .kongtiao .modeConfirm .popup .footer .confirm {
  width: 68px;
  height: 60rpx;
  line-height: 60rpx;
  background: #0068ff;
  border-radius: 5px;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
  margin-left: 12rpx;
}
page .kongtiao .modeConfirm .popup .close {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
