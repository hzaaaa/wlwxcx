page {
  height: 100%;
}
.power {
  background-color: #f8f8f8;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.power .head-color {
  width: 100%;
  height: 488rpx;
  background: linear-gradient(180deg, rgba(0, 104, 255, 0.15), rgba(0, 104, 255, 0));
}
.power .head-color .xzjt {
  position: absolute;
  top: 102rpx;
  left: 24rpx;
  height: 30rpx;
  width: 30rpx;
}
.power .head-color .title {
  padding-top: 88rpx;
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #333333;
}
.power .head-color .controler {
  margin-top: 40rpx;
}
.power .head-color .controler .select-list {
  display: flex;
}
.power .head-color .controler .select-list .select-item {
  margin-left: 30rpx;
}
.power .head-color .controler .picker {
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #0068ffbf;
}
.power .head-color .controler .more-select {
  float: right;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #0068ffbf;
  margin-right: 24rpx;
}
.power .head-color .banner {
  margin-top: 36rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
  white-space: nowrap;
  height: 60rpx;
}
.power .head-color .banner .item {
  padding: 12rpx 32rpx;
  margin-left: 24rpx;
  opacity: 0.7;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.power .head-color .banner .item-active {
  line-height: 34rpx;
  background: #ffffff;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #0068ff;
}
.power .body-wrap {
  position: absolute;
  top: 248rpx;
  height: calc(100% - 336rpx);
  width: 100%;
  overflow: auto;
}
.power .body-wrap .body-item {
  position: relative;
  width: 702rpx;
  height: 162rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-left: 24rpx;
  display: flex;
  margin-bottom: 12rpx;
}
.power .body-wrap .body-item .radioC {
  margin-left: 24rpx;
  margin-top: 48rpx;
  transform: scale(0.8);
  margin-right: -12rpx;
}
.power .body-wrap .body-item .image {
  margin-left: 32rpx;
  width: 114rpx;
  height: 114rpx;
  margin-top: 24rpx;
}
.power .body-wrap .body-item .wordGroup {
  margin-left: 24rpx;
}
.power .body-wrap .body-item .wordGroup .name {
  position: relative;
  margin-top: 36rpx;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  padding-left: 20rpx;
}
.power .body-wrap .body-item .wordGroup .name .state {
  position: absolute;
  left: 0rpx;
  top: 18rpx;
  border-radius: 50% ;
  width: 10rpx;
  height: 10rpx;
}
.power .body-wrap .body-item .wordGroup .address {
  margin-top: 12rpx;
  font-size: 24rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.power .body-wrap .body-item .switchC {
  position: absolute;
  bottom: 17rpx;
  right: 6rpx;
  transform: scale(0.5);
}
.power .body-wrap .body-item .xyjt {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 25rpx;
  height: 25rpx;
}
.power .bottomC {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
}
.power .bottomC .buttonC {
  float: right;
  width: 136rpx;
  height: 60rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  margin-right: 24rpx;
}
.power .bottomC .blue-body {
  background: #0068ff;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Medium;
  font-weight: 500;
  text-align: center;
  color: #ffffff;
}
.power .bottomC .blue-border {
  border: 1px solid #0068ff;
  font-size: 14px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: center;
  color: #0068ff;
}
.power .bottomC .radioC2 {
  width: 50%;
  margin-top: 25rpx;
  transform: scale(0.9);
  margin-right: -12rpx;
  font-size: 16px;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
